<%= div_for(comment) %>
	<div class="comments_wrapper clearfix">
		<div class="pull-left">
			<h6><%= comment.body %></h6>
			<p><small>Added <strong><%= time_ago_in_words(comment.created_at) %> ago </strong>by <%= comment.user.email %> </small></p>
		</div>
		<div class="btn-group pull-right">
			<% if comment.user == current_user %>
				<%= link_to 'Edit', edit_comment_path(comment), class: 'btn btn-sm btn-default' %>
				<%= link_to 'Delete', comment, method: :delete, class: 'btn btn-sm btn-default', data: { confirm: 'Are you sure?' } %>
			<% end %>
		</div>
	</div>
