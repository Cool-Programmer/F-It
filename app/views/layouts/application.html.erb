<!DOCTYPE html>
<html>
  <head>
    <title>Gedit</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Gedit', root_path, class: 'navbar-brand', id: 'logo' %>
          <!-- <a class="navbar-brand" href="#">Gedit</a> -->
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li class="<%= params[:controller] == 'links' && params['action'] == 'new' ? 'active' : '' %>"><%= link_to 'Submit Link', new_link_path %></li>
                <li><%= link_to 'Account', edit_user_registration_path %></li>
                <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to 'Sign Up', new_user_registration_path %></li>
                <li><%= link_to 'Log In', new_user_session_path %></li>
              <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
  </header>

    <div class="container" id="main">
    
      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert alert=#{name}") %>
      <% end %>

      <div id="content" class="col-md-9 center-block">
        <%= yield %>
      </div>

    </div>
  </body>
</html>
